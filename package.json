{
  "name": "schema-js-client",
  "author": "Schema <support@schema.io>",
  "version": "2.0.0",
  "description": "Schema API client for JavaScript",
  "homepage": "https://schema.io",
  "license": "MIT",
  "main": "index.js",
  "dependencies": {
    "bluebird": "3.4.0"
  },
  "devDependencies": {
    "browserify": "13.0.0",
    "chai": "3.5.0",
    "eslint": "2.9.0",
    "mocha": "2.4.5",
    "sane": "1.3.4",
    "sinon": "1.17.4",
    "uglify-js": "2.6.2",
    "sane": "1.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/schemaio/schema-js.git"
  },
  "scripts": {
    "lint": "eslint lib browser index.js",
    "test": "mocha test",
    "test:watch": "sane \"mocha test\"",
    "build": "npm run build:pre && npm run build:debug && npm run build:min",
    "build:pre": "rm -rf schema.js schema.min.js",
    "build:debug": "browserify index.js --standalone Schema > schema.js",
    "build:min": "browserify index.js --standalone Schema | uglifyjs -m -o schema.min.js"
  }
}
